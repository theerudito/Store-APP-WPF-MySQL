                <ListView.View>
                    <GridView>
                        <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>

                                    <Grid>
                                        <TextBlock Text="{Binding IdProduct}" Grid.Column="0"/>
                                        <TextBlock Text="{Binding NameProduct}" Grid.Column="1"/>
                                        <TextBlock Text="{Binding CodeProduct}" Grid.Column="2"/>
                                        <TextBlock Text="{Binding Brand}" Grid.Column="3"/>
                                        <TextBlock Text="{Binding Description}" Grid.Column="4"/>
                                        <TextBlock Text="{Binding Quantity}" Grid.Column="5"/>
                                        <TextBlock Text="{Binding P_Unitary}" Grid.Column="6"/>

                                    </Grid>

                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <DataGrid Margin="283,30,12,84" x:Name="ListViewProduct" SelectedItem="selecion"/>

            <!--<DataGrid  x:Name="ListViewCart" Margin="254,61,19,39" Grid.Row="1" />-->

