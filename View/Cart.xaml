                        Grid.Column="1"
                        Height="20"
                        HorizontalAlignment="Left"
                        />

                    <TextBlock
                        Text="27/01/2023"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        HorizontalAlignment="Center"
                        Grid.Row="3"
                        Grid.Column="3"
                        Height="20"
                        />

                    <TextBlock
                        Text="Hora:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Row="3"
                        Grid.Column="5"
                        Height="20"
