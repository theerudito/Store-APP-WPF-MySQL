                        />

                    <TextBlock
                        Text="11:50"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Row="3"
                        Grid.Column="7"
                        Height="20"
                        HorizontalAlignment="Center"
                        />

                    <TextBlock
                        Text="CI:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Row="3"
                        Grid.Column="9"
                        Height="20"
                        HorizontalAlignment="Center"
                        />

                    <TextBox
                        Foreground="white"
                        BorderThickness="0,0,0,1"
                        Background="{x:Null}"
                        Grid.Row="3"
                        Grid.Column="11"
                        VerticalAlignment="Center"
                        Margin="0,-5,0,0"
                        />


                    <Image
                        Source="/pintures/lupa.png"
                        Cursor="Hand"
                        Grid.Row="3"
                        Grid.Column="13"
                        Height="20"
                        Width="20"
                        HorizontalAlignment="Center"
                        >
                    </Image>

                </Grid>
            </StackPanel>
            <StackPanel
                Grid.Row="5"
                >
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Text="Nombre:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Row="0"
                        Grid.Column="1"
                        Height="20"
                        HorizontalAlignment="Left"
                        />

                    <TextBox
                        Foreground="white"
                        BorderThickness="0,0,0,1"
                        Background="{x:Null}"
                        Grid.Row="0"
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Margin="0,-7,0,0"
                        />

                    <TextBlock
                        Text="Apellido:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Row="0"
                        Grid.Column="5"
                        VerticalAlignment="Center"
                        />

                    <TextBox
                        Foreground="white"
                        BorderThickness="0,0,0,1"
                        Background="{x:Null}"
                        Grid.Row="0"
                        Grid.Column="7"
                        VerticalAlignment="Center"
                        Margin="0,-7,0,0"
                        />
                </Grid>
            </StackPanel>
            <StackPanel
                Grid.Row="7"
                >
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="5"/>
