                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Row="0"
                        Grid.Column="9"
                        VerticalAlignment="Center"
                        />

                    <TextBox
                        Foreground="white"
                        BorderThickness="0,0,0,1"
                        Background="{x:Null}"
                        Grid.Row="0"
                        Grid.Column="11"
                        VerticalAlignment="Center"
                        Margin="0,-7,0,0"
                        />
                </Grid>
            </StackPanel>
            <StackPanel
                Grid.Row="9"
                >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="20"/>

                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Text="COD:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        />

                    <TextBox
                        Foreground="white"
                        BorderThickness="0,0,0,1"
                        Background="{x:Null}"
                        Grid.Row="0"
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Margin="0,-7,0,0"
                        />

                    <TextBlock
                        Text="DETALLE:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Row="0"
                        Grid.Column="5"
                        VerticalAlignment="Center"
                        />

                    <TextBox
                        Foreground="white"
                        BorderThickness="0,0,0,1"
                        Background="{x:Null}"
                        Grid.Row="0"
                        Grid.Column="7"
                        VerticalAlignment="Center"
                        Margin="0,-7,0,0"
                        />

                    <TextBlock
                        Text="CANT:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Row="0"
                        Grid.Column="9"
                        VerticalAlignment="Center"
                        />

                    <TextBox
                        Foreground="white"
                        BorderThickness="0,0,0,1"
                        Background="{x:Null}"
                        Grid.Row="0"
                        Grid.Column="11"
                        VerticalAlignment="Center"
                        Margin="0,-7,0,0"
                        />

                    <TextBlock
                        Text="DESC:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Row="0"
                        Grid.Column="13"
                        VerticalAlignment="Center"
                        />


                    <TextBox
                        Foreground="white"
                        BorderThickness="0,0,0,1"
                        Background="{x:Null}"
                        Grid.Row="0"
                        Grid.Column="15"
                        VerticalAlignment="Center"
                        Margin="0,-7,0,0"
                        />

                    <TextBlock
                        Text="P_UNITARY:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Row="0"
                        Grid.Column="17"
                        VerticalAlignment="Center"
                        />

                    <TextBox
                        Foreground="white"
                        BorderThickness="0,0,0,1"
                        Background="{x:Null}"
                        Grid.Row="0"
                        Grid.Column="19"
                        VerticalAlignment="Center"
                        Margin="0,-7,0,0"
                        />
                    <TextBlock
                        Text="P_TOTAL:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Row="0"
                        Grid.Column="21"
                        VerticalAlignment="Center"
                        />

                    <TextBox
                        Foreground="white"
                        BorderThickness="0,0,0,1"
                        Background="{x:Null}"
                        Grid.Row="0"
                        Grid.Column="23"
                        VerticalAlignment="Center"
                        Margin="0,-7,0,0"
                        />

                    <Image
                        Source="/pintures/sum.png"
                        Cursor="Hand"
                        Height="20"
                        Width="20"
                        Grid.Row="0"
                        Grid.Column="25"
                        VerticalAlignment="Center"
                        >
                    </Image>

                </Grid>
            </StackPanel>
            <Grid
                Grid.Row="11">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Grid
                    Grid.Row="0"
                    Grid.Column="0"
                    >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ListView
                        Background="Black"/>

                </Grid>

                <Grid
                    Grid.Row="0"
                    Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>

                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Text="SUBTOTAL:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Column="1"
                        Grid.Row="1"
                        HorizontalAlignment="Left"
                        />
                    <TextBlock
                        Text="18:25"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Column="2"
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        />

                    <TextBlock
                        Text="SUBTOTAL0:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        HorizontalAlignment="Left"
                        Grid.Column="1"
                        Grid.Row="3"
                        />
                    <TextBlock
                        Text="18:25"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Column="2"
                        Grid.Row="3"
                        HorizontalAlignment="Right"
                        />

                    <TextBlock
                        Text="SUBTOTAL12:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Column="1"
                        Grid.Row="5"
                        HorizontalAlignment="Left"
                        />
                    <TextBlock
                        Text="18:25"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        HorizontalAlignment="Right"
                        Grid.Column="2"
                        Grid.Row="5"
                        />
                    <TextBlock
                        Text="DESCUENTO:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        HorizontalAlignment="Left"
