                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        />

                    <TextBox
                        Foreground="white"
                        BorderThickness="0,0,0,1"
                        Background="{x:Null}"
                        Grid.Row="0"
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Margin="0,-7,0,0"
                        />
                    <TextBlock
                        Text="Email:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Row="0"
                        Grid.Column="5"
                        VerticalAlignment="Center"
                        />

                    <TextBox
                        Foreground="white"
                        BorderThickness="0,0,0,1"
                        Background="{x:Null}"
                        Grid.Row="0"
                        Grid.Column="7"
                        VerticalAlignment="Center"
