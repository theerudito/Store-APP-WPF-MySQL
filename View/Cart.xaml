                        Grid.Row="7"
                        />
                    <TextBlock
                        Text="18:25"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        HorizontalAlignment="Right"
                        Grid.Column="2"
                        Grid.Row="7"
                        />

                    <TextBlock
                        Text="IVA:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Column="1"
                        Grid.Row="9"
                        HorizontalAlignment="Left"
                        />
                    <TextBlock
                        Text="18:25"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Column="2"
                        Grid.Row="9"
                        HorizontalAlignment="Right"
                        />
                    <TextBlock
                        Text="TOTAL:"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Column="1"
                        Grid.Row="11"
                        HorizontalAlignment="Left"
                        />
                    <TextBlock
                        Text="18:25"
                        Foreground="Aquamarine"
                        FontSize="14"
                        FontFamily="Monserrat"
                        Grid.Column="2"
                        Grid.Row="11"
                        HorizontalAlignment="Right"
                        />

                </Grid>

            </Grid>
            <Grid
                Grid.Row="13"
                >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    ></StackPanel>
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="1"
                    >
                    <Button
                        BorderThickness="0"
                        Content="GUARDAR"
                        Foreground="White"
                        FontSize="12"
                        FontFamily="Monserrat"
                        FontStyle="Normal"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Height="20"
                        Margin="5,0,5,0"
                        >
                        <Button.Style >
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#2255DB"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1C90ED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    CornerRadius="5"
                                    Background="{TemplateBinding Background}"
                                    >
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>
                </StackPanel>

            </Grid>
        </Grid>
    </StackPanel>
</Page>
